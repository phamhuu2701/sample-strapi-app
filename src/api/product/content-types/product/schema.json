{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "descriptionHtml": {
      "type": "richtext",
      "required": true
    },
    "vendor": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::vendor.vendor"
    },
    "product_type": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product-type.product-type"
    },
    "handle": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "price": {
      "type": "decimal"
    },
    "compareAtPrice": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "ACTIVE",
        "ARCHIVED",
        "DRAFT"
      ],
      "default": "ARCHIVED"
    },
    "images": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true
    },
    "tags": {
      "type": "string"
    }
  }
}
